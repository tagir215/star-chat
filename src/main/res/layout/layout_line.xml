<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <View
        android:id="@+id/side"
        android:layout_width="1dp"
        android:layout_marginTop="10dp"
        android:layout_height="40dp"
        android:layout_marginStart="10dp"
        android:background="@color/non_opaque_green"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="@id/side"
        app:layout_constraintBottom_toBottomOf="@id/side"
        android:background="@color/non_opaque_green"
        />
    <View
        android:id="@+id/side2"
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:layout_marginEnd="10dp"
        android:background="@color/non_opaque_green"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/side"
        app:layout_constraintBottom_toBottomOf="@id/side"
        />
    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        app:layout_constraintStart_toStartOf="@id/side2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/side"
        android:background="@color/non_opaque_green"
        />
    <View
        android:layout_width="0dp"
        android:layout_marginHorizontal="18dp"
        app:layout_constraintStart_toStartOf="@id/side"
        app:layout_constraintEnd_toEndOf="@id/side2"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/side"
        android:layout_height="1dp"
        android:background="@color/non_opaque_green"
        android:id="@+id/line1"
        />
    <ImageView
        app:layout_constraintBottom_toBottomOf="@id/line1"
        app:layout_constraintStart_toStartOf="@id/line1"
        android:layout_width="20dp"
        android:layout_height="4dp"
        android:layout_marginStart="-8dp"
        android:src="@drawable/ic_baseline_signal_cellular_4_bar_24"
        />

    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:id="@+id/line2"
        app:layout_constraintStart_toStartOf="@id/line1"
        app:layout_constraintEnd_toEndOf="@id/line1"
        app:layout_constraintTop_toBottomOf="@id/line1"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"
        android:background="@color/non_opaque_green"
        />

    <ImageView
        app:layout_constraintBottom_toBottomOf="@id/line2"
        app:layout_constraintEnd_toEndOf="@id/line2"
        android:layout_width="20dp"
        android:layout_height="4dp"
        android:scaleX="-1"
        android:layout_marginEnd="-8dp"
        android:src="@drawable/ic_baseline_signal_cellular_4_bar_24"
        />
</androidx.constraintlayout.widget.ConstraintLayout>