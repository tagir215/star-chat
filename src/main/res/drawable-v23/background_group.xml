<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android"
    >

    <item>
        <shape android:shape="rectangle">
            <size android:width="200dp" android:height="50dp"/>
            <solid android:color="@color/opaque_green"/>
            <stroke android:color="@color/half_opaque_green" android:width="2dp" android:dashGap="2dp" android:dashWidth="2dp"/>
            <gradient android:centerColor="@color/half_opaque_green"/>
        </shape>
    </item>

    <item android:gravity="start" android:top="0dp" android:width="2dp" android:height="10dp">
        <shape android:shape="rectangle" >
            <solid android:color="@color/non_opaque_green"/>
        </shape>
    </item>
    <item android:gravity="start" android:top="0dp" android:width="10dp" android:height="2dp">
        <shape android:shape="rectangle" >
            <solid android:color="@color/non_opaque_green"/>
        </shape>
    </item>

    <item android:gravity="end" android:top="0dp" android:width="2dp" android:height="10dp">
        <shape android:shape="rectangle" >
            <solid android:color="@color/non_opaque_green"/>
        </shape>
    </item>
    <item android:gravity="end" android:top="0dp" android:width="10dp" android:height="2dp">
        <shape android:shape="rectangle" >
            <solid android:color="@color/non_opaque_green"/>
        </shape>
    </item>


    <item android:gravity="bottom" android:top="0dp" android:width="2dp" android:height="10dp">
        <shape android:shape="rectangle" >
            <solid android:color="@color/non_opaque_green"/>
        </shape>
    </item>
    <item android:gravity="bottom" android:top="0dp" android:width="10dp" android:height="2dp">
        <shape android:shape="rectangle" >
            <solid android:color="@color/non_opaque_green"/>
        </shape>
    </item>
    <item android:gravity="bottom|right" android:top="0dp" android:width="2dp" android:height="10dp">
        <shape android:shape="rectangle" >
            <solid android:color="@color/non_opaque_green"/>
        </shape>
    </item>
    <item android:gravity="bottom|right" android:top="0dp" android:width="10dp" android:height="2dp">
        <shape android:shape="rectangle" >
            <solid android:color="@color/non_opaque_green"/>
        </shape>
    </item>



</layer-list>